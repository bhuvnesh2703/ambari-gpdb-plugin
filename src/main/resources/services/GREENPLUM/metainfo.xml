<?xml version="1.0"?>

<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>GREENPLUM</name>
      <displayName>GREENPLUM</displayName>
      <comment>Pivotal Greenplum Database</comment>
      <version>4.3.5.2</version>
      <components>

        <component>
          <name>GPDBMASTER</name>
          <displayName>GPDB Master</displayName>
          <category>MASTER</category>
          <cardinality>1</cardinality>
          <commandScript>
            <script>scripts/gpdbmaster.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>4000</timeout>
          </commandScript>
          <dependencies>
            <dependency>
              <name>GREENPLUM/GPDBSEGMENT</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>true</enabled>
              </auto-deploy>
            </dependency>
          </dependencies>
        </component>

      <component>
          <name>GPDBSTANDBY</name>
          <displayName>GPDB Standby Master</displayName>
          <category>MASTER</category>
          <cardinality>0-1</cardinality>
          <commandScript>
              <script>scripts/gpdbstandby.py</script>
              <scriptType>PYTHON</scriptType>
              <timeout>600</timeout>
          </commandScript>
          <customCommands>
              <customCommand>
                  <name>ActivateStandby</name>
                  <commandScript>
                      <script>scripts/gpdbstandby.py</script>
                      <scriptType>PYTHON</scriptType>
                      <timeout>600</timeout>
                  </commandScript>
              </customCommand>
          </customCommands>
      </component>

        <component>
          <name>GPDBSEGMENT</name>
          <displayName>GPDB Segment</displayName>
          <category>SLAVE</category>
          <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/gpdbsegment.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
      </components> 

      <osSpecifics>
        <osSpecific>
          <osFamily>any</osFamily>
           <packages>
            <package>
              <name>hawq</name>
            </package>
          </packages>
        </osSpecific>
      </osSpecifics>

      <commandScript>
        <script>scripts/service_check.py</script>
        <scriptType>PYTHON</scriptType>
        <timeout>300</timeout>
      </commandScript>

      <configuration-dependencies>
        <config-type>greenplum-site</config-type>
      </configuration-dependencies>
    </service>

  </services>
</metainfo>

